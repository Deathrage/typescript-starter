{
	"parser": "@typescript-eslint/parser",
	"extends": [
		"standard",
		"eslint-config-prettier"
	],
	"env": {
		"node": true,
		"es6": true
	},
	"overrides": [{
		"files": ["*.spec.ts"],
		"env": {
			"jest": true
		}
	}],
	"plugins": ["@typescript-eslint"],
	"rules": {
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": "error",
		"quotes": ["error", "single"]
	}
}